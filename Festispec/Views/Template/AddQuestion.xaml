<Page x:Class="Festispec.Views.Template.AddQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Festispec.Views.Template"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AddQuestion"
      DataContext="{Binding Source={StaticResource Locator}, Path=AddQuestion}">

    <StackPanel>
        <Button Grid.Column="0" Content="Back" Margin="5px 10px" Command="{Binding NavigateBackCommand}" />
        <TextBox Text="{Binding Path=EntityViewModel.Name}" />
        <ComboBox ItemsSource="{Binding Path=QuestionTypes}" 
            DisplayMemberPath="Type" 
            SelectedValuePath="Type" 
            SelectedValue="{Binding Path=EntityViewModel.QuestionType}" />
        <Button Content="Save" Margin="5px 10px" Command="{Binding SaveEntityCommand}"/>
    </StackPanel>
</Page>

