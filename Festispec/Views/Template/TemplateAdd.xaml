<Page x:Class="Festispec.Views.Template.TemplateAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TemplateAdd" Height="600" Width="800"
        DataContext="{Binding Source={StaticResource Locator}, Path=TemplateAdd}">
    <StackPanel>
        <Button Content="Back" Margin="5px 10px" Command="{Binding NavigateBackCommand}" />
        <TextBox Text="{Binding Path=EntityViewModel.Name}"></TextBox>
        <Grid>
            <Button x:Name="AddQuestion" Content="Vraag Toevoegen" Margin="250,45,442,-111" RenderTransformOrigin="1.263,1.329" Command="{Binding NavigateToAddQuestionCommand}"/>
            <Button x:Name="RemoveQuestion" Content="Vraag Verwijderen" Margin="437,45,255,-111" RenderTransformOrigin="1.263,1.329"/>
        </Grid>

        <Button Content="Save" Margin="5px 10px" Command="{Binding SaveEntityCommand}"/>
    </StackPanel>

</Page>
