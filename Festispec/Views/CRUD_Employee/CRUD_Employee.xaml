<Window x:Class="Festispec.Views.CRUD_Employee.Crud_Employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Festispec.Views.CRUD_Employee"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"  
        ResizeMode="CanMinimize"
        Title="Crud_Employee" Height="600" Width="800"
        DataContext="{Binding Employees, Source={StaticResource Locator}}">
    <Grid>
        <Button x:Name="button" Content="back" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="50"/>

        <Button Width="50" Height="50" FontSize="30" Content="+" 
                        Foreground="White" FontWeight="Bold" Background="#FF44AE3F"  Margin="323,0,420.6,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Search:"  FontSize="25" HorizontalAlignment="Left" Margin="378,0,0,0" VerticalAlignment="Top" Height="50" Width="91"/>

        <DataGrid ItemsSource="{Binding Employees}" Margin="0,55,-0.4,0.4"></DataGrid>

    </Grid>
</Window>
